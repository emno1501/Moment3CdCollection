@model Moment3CdCollection.Models.Loan

@{
    ViewData["Title"] = "Delete";
}

<h1>Lämna tillbaka CD</h1>

<h3>Är du säker att du vill avsluta lånet?</h3>
<div>
    <h4>Lån</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Lånedatum
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LoanDate)
        </dd>
        <dt class = "col-sm-2">
            Användare
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.User.FullName)
        </dd class>
        <dt class = "col-sm-2">
            CD
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cd.Title)
        </dd class>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="LoanId" />
        <input type="submit" value="Ta bort lån" class="btn btn-danger" /> |
        <a asp-action="Index">Tillbaka till alla lån</a>
    </form>
</div>
